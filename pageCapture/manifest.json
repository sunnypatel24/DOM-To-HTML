{
  "manifest_version": 3,
  "name": "Save DOM 2",
  "description": "Save DOM of current page using pageCapture",
  "version": "1.0.0",
  "icons": { "128": "icon_70.png" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["script.js"]
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "pageCapture"]
}
